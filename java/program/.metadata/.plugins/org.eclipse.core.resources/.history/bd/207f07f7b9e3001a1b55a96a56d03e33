	int bonuspoint;
	Product[] Cart;
	int index = 0;
	
	public Buyer (int money,int bonuspoint) {
		this.money = money;
		this.bonuspoint = bonuspoint;
		Cart = new Product[10];
	}
	
	public void Buy() {
		
	}
}



